{
  "name": "create-remotion-reloaded",
  "version": "1.0.0",
  "description": "Scaffold and configure Remotion Reloaded projects",
  "license": "MIT",
  "homepage": "https://github.com/rawhalo/remotion-reloaded#readme",
  "bugs": {
    "url": "https://github.com/rawhalo/remotion-reloaded/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rawhalo/remotion-reloaded.git",
    "directory": "packages/create-remotion-reloaded"
  },
  "keywords": [
    "remotion",
    "scaffold",
    "cli",
    "video"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "create-remotion-reloaded": "./dist/cli.cjs"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
